@model StudentManagementSystem.Entities.Students

@{
    ViewData["Title"] = "Create";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>


<script>
   
    $(document).ready(function () {
        $("#btncreate").click(function () {
            var data = {
                Fname: $("#Fname").val(),
                Lname: $("#Lname").val(),
                Email: $("#Email").val(),
                password: $("#password").val(),
                phone: $("#phone").val()
            };
    
            $.ajax(
                {
                    type: "POST",
                    url: "/api/students/createstudent/",
                    dataType: "text",
                    data: data,
                    success: function () {
                        alert("Student Create successfully.");
                        window.location = "/students/getall";
                    },
                    error: function () {
                    }

                });

        });
    });

</script>

<h1>Create</h1>



<hr />
<div class="row">
    
          
     
        
                <input id="Fname"    type='text'/>

        
       
                <input id="Lname"  type='text' />
        
          
     
                <input id="Email"   type='text' />
          
                <input id="password"    type='text'/>
               
           
          
                <input id="phone"   type='text'/>
           
          
                <input class="btn-default" type="button" id="btncreate" value="Create" />
        
    
</div>

<div>
    <a asp-action="getall" asp-controller="Students">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
