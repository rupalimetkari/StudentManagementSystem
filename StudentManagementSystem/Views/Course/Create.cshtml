@model StudentManagementSystem.Entities.Course

@{
    ViewData["Title"] = "Create";

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>


<script>

    $(document).ready(function () {
        $("#btncreate").click(function () {
            var data = {
                name: $("#name").val(),
                course_no: $("#course_no").val(),
                
            };
            console.log(data);
            $.ajax(
                {
                    
                    type: "POST",
                    url: "/api/course/createcourse/",
                    dataType: "text",
                    data: data,
                    success: function () {
                        alert("course Create successfully.");
                        window.location = "/courses/getall";
                    },
                    error: function () {
                    }

                });

        });
    });

</script>

<h1>Create</h1>




<hr />
<div class="row">




    <input id="name" type='text' />



    <input id="course_no" type='text' />



   

    <input class="btn-default" type="button" id="btncreate" value="Create" />


</div>

<div>
    <a asp-action="getall" asp-controller="course">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
